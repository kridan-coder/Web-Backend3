@model Backend3.Models.QuizViewModel
@{
    ViewBag.Title = "Hello Quiz";
}

<h2>Quiz</h2>

<form asp-action="Index" class="form-horizontal">

    @if (Model.ArithmeticOperations != null)
    {
        for (int i = 0; i < Model.ArithmeticOperations.Count; i++)
        {
            <input type="hidden" asp-for="@Model.ArithmeticOperations[i].CorrectAnswer" />
            <input type="hidden" asp-for="@Model.ArithmeticOperations[i].Operand1" />
            <input type="hidden" asp-for="@Model.ArithmeticOperations[i].Operand2" />
            <input type="hidden" asp-for="@Model.ArithmeticOperations[i].Operation" />
            <input type="hidden" asp-for="@Model.ArithmeticOperations[i].OperationToShow" />
            <input type="hidden" asp-for="@Model.ArithmeticOperations[i].UserAnswer" />
            <input type="hidden" asp-for="@Model.ArithmeticOperations[i].UserAnsweredCorrectly" />
        }
    }
    <input type="hidden" asp-for="CurrentRandomOperand1" />
    <input type="hidden" asp-for="CurrentRandomOperand2" />
    <input type="hidden" asp-for="CurrentRandomOperation" />
    <input type="hidden" asp-for="CurrentRandomOperationToShow" />
    <input type="hidden" asp-for="CorrectAnswerCount" />

    <div class="form-group">
        <label class="col-md-2 control-label">@Model.CurrentRandomOperand1 @Model.CurrentRandomOperationToShow @Model.CurrentRandomOperand2 = </label>
        <div class="col-md-10">
            <input type="number" asp-for="CurrentUserAnswer" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-10 col-md-offset-2">
            <button type="submit" name="Action" class="btn btn-default" value="Submit">Submit</button>
            <button type="submit" name="Action" class="btn btn-primary" value="Finish">Finish</button>
        </div>
    </div>
</form>